# aitema|Hinweis - Environment Configuration
# Copy to .env and adjust values

# ============================================================
# Application
# ============================================================
APP_NAME=aitema-hinweis
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# ============================================================
# GlobaLeaks Backend
# ============================================================
GLOBALEAKS_WORKING_PATH=/var/globaleaks
GLOBALEAKS_DEV_MODE=true
DATABASE_URI=sqlite:///var/globaleaks/globaleaks.db

# ============================================================
# Redis
# ============================================================
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# ============================================================
# Security
# ============================================================
SECRET_KEY=CHANGE_ME_IN_PRODUCTION_MIN_32_CHARS
JWT_SECRET=CHANGE_ME_IN_PRODUCTION
SESSION_TIMEOUT_MINUTES=30
MFA_ENABLED=true

# ============================================================
# Email (Notification Service)
# ============================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=hinweis@kommune.de
SMTP_TLS=true

# ============================================================
# HinSchG Configuration
# ============================================================
# Eingangsbestaetigung Frist in Tagen (ยง8 Abs. 1 S. 1: 7 Tage)
HINSCHG_FRIST_EINGANGSBESTAETIGUNG_TAGE=7
# Rueckmeldung Frist in Tagen (ยง8 Abs. 1 S. 3: ~3 Monate)
HINSCHG_FRIST_RUECKMELDUNG_TAGE=90
# Aufbewahrungsfrist in Jahren (ยง11 Abs. 1: 3 Jahre)
HINSCHG_AUFBEWAHRUNGSFRIST_JAHRE=3
# Erinnerung vor Fristablauf in Tagen
HINSCHG_ERINNERUNG_VOR_FRIST_TAGE=2
# Eskalations-E-Mail
HINSCHG_ESKALATION_EMAIL=admin@kommune.de

# ============================================================
# Multi-Tenant
# ============================================================
DEFAULT_TENANT_NAME=Musterkommune
ROOT_DOMAIN=hinweis.kommune.de

# ============================================================
# Tor Hidden Service (Optional)
# ============================================================
TOR_ENABLED=false

# ============================================================
# BSI Compliance
# ============================================================
# Logging Level (BSI APP.3.2)
LOG_LEVEL=INFO
# Audit Log Retention (days)
AUDIT_LOG_RETENTION_DAYS=365
# Session Security
SECURE_COOKIES=true
SAME_SITE_COOKIES=strict

# ============================================================
# Frontend
# ============================================================
ANGULAR_API_URL=http://localhost:8082
NODE_ENV=development
