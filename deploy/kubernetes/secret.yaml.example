# ACHTUNG: Diese Datei ist ein Beispiel!
# Echte Secrets NIEMALS in Git committen!
# 
# Secrets erstellen mit:
#   kubectl create secret generic hinweis-secrets \
#     --namespace=aitema-hinweis \
#     --from-literal=postgres-db=hinweis_db \
#     --from-literal=postgres-user=hinweis_user \
#     --from-literal=postgres-password=$(openssl rand -hex 32) \
#     --from-literal=database-url="postgresql://hinweis_user:PASSWORD@postgres:5432/hinweis_db" \
#     --from-literal=jwt-secret=$(openssl rand -hex 32) \
#     --from-literal=encryption-key=$(openssl rand -hex 16) \
#     --from-literal=smtp-pass=IHR_SMTP_PASSWORT
#
apiVersion: v1
kind: Secret
metadata:
  name: hinweis-secrets
  namespace: aitema-hinweis
  labels:
    app.kubernetes.io/name: aitema-hinweis
    app.kubernetes.io/component: secrets
type: Opaque
stringData:
  postgres-db: "hinweis_db"
  postgres-user: "hinweis_user"
  postgres-password: "HIER_SICHERES_PASSWORT_EINSETZEN"
  database-url: "postgresql://hinweis_user:PASSWORT@postgres:5432/hinweis_db"
  jwt-secret: "HIER_JWT_SECRET_EINSETZEN_min_32_zeichen"
  encryption-key: "HIER_16_BYTE_KEY"
  smtp-pass: "HIER_SMTP_PASSWORT"
